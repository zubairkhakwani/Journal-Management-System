@model List<Article>
    @*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="col-sm-4" style="padding:35px; ">
    <partial name="_AuthorIndexSideBar"></partial>
</div>

<div class="col-sm-8">
    <table class="table table-striped" style="table-layout:fixed; word-wrap:break-word">
        <thead>
            <tr>
                <th>Title</th>
                <th>Authors</th>
                <th>Files</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Article a in Model)
            {
                <tr>
                    <td>@a.Title</td>
                    <td>
                        @foreach (AuthorsAndOpposedReviewers ao in a.AuthorsAndOpposedReviewers)
                        {
                            <p>@ao.User.Email</p>
                        }
                    </td>
                    <td>
                        @foreach(Files f in a.Files)
                        {
                            <a href="~/files/@f.File">@f.File</a>
                        }
                    </td>
                    <td>@a.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>